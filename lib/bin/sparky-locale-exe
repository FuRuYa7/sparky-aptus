#!/bin/bash

#  Sparky APTus Locale Exe script is a part of sparky-locale
#  Created by Pawe≈Ç "pavroo" Pijanowski 2014/05/21
#  Copyright 2014-2018 under the GNU GPL2 License
#  Last update 2018/02/22

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"

# check connection
PINGTEST=$(ping -c 1 debian.org | grep [0-9])

if [ "$PINGTEST" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL16"
	exit 1
fi

if [ "$testroot" != "root" ]; then
	/usr/bin/remsu $0 &
fi

yad --width=450 --height=150 --window-icon=preferences-desktop-locale --image=/usr/share/icons/sparky/flags/48/$IMG.png --text="$LOCAL49 $LANG $LOCAL50\n\n$LOCAL51" --title="APTus" --button=Ok:0 --button=$LOCAL24:1

if [ "$?" != "0" ]; then
	yad --width=450 --height=100 --window-icon=preferences-desktop-locale --image=/usr/share/icons/sparky/flags/48/$IMG.png --text="$LOCAL12" --title="APTus" --button=Ok:0
	exit 1
else
	# install firefox language package
	if [ -f /usr/bin/firefox-esr ] || [ -f /usr/bin/firefox ]; then
		apt-get install firefox-esr-l10n-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 Firefox $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install thunderbird language package
	if [ -f /usr/bin/thunderbird ]; then
		apt-get install thunderbird-l10n-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 Thunderbird $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install libreoffice language package
	if [ -f /usr/bin/libreoffice ]; then
		apt-get install libreoffice-help-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 LibreOffice $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install calligra language package
	if [ -f /usr/bin/calligrawords ]; then
		apt-get install calligra-l10n-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 Calligra $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install kde task
	if [ -d /usr/share/doc/plasma-desktop ]; then
		apt-get install task-$LANGTASK-kde-desktop -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 KDE task $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install gnome task
	if [ -d /usr/share/doc/gnome-shell ] || [ -d /usr/share/doc/gnome-session-flashback ]; then
		apt-get install task-$LANGTASK-gnome-desktop -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 GNOME task $LANG $LOCAL53" --title="APTus" --no-cancel
	fi

	# install myspell
	apt-get install myspell-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 myspell dictionary $LANG $LOCAL53" --title="APTus" --no-cancel
	
	# install aspell
	apt-get install aspell-$COUNTRY -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 aspell dictionary $LANG $LOCAL53" --title="APTus" --no-cancel
	
	# install ja_JP fonts
	if [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
		apt-get install fonts-vlgothic fonts-ipafont fcitx-mozc -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL58" --title="APTus" --no-cancel
	fi

	# install pt_BR task
	if [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
		apt-get install task-brazilian-portuguese -y | zenity --progress --pulsate --width=450 --height=100 --auto-close --window-icon=preferences-desktop-locale --text="$LOCAL52 pt_BR task $LOCAL53" --title="APTus" --no-cancel
	fi
fi

exit 0
