#!/bin/bash

# vboxguest-remove script lets you remove 'virtualbox-guest-utils' package from your system.
# Don't remove 'virtualbox-guest-utils' package if you are running
# SparkyLinux inside the VirtualBox machine.
#
# Copyright 2015-2018 Pawe≈Ç "pavroo" Pijanowski <pavroo@onet.eu>
# Licensed under the GPLv2 license see /usr/share/common-licenses/GPL-2
# Created 2015/05/18
# Last update 2018/03/29

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"
if [ "$testroot" != "root" ]; then
	/usr/bin/remsu $0 &
fi

DIALOG400="yad --window-icon=virtualbox --width=400 --height=200 --center"
DIALOG="yad --window-icon=virtualbox --width=400 --height=150 --center"
TITLE="--always-print-result --dialog-sep --image=virtualbox --title="
TEXT="--text="
OKEXIT=" --button=Ok:0 --button=$LOCAL24:1"
MSGBOX="--button=Ok:0"
TITLETEXT="$LOCAL54"
if [ -f /usr/bin/sparky-xterm ];then
	SPARKYXTERM="/usr/bin/sparky-xterm"
else
	echo "sparky-xterm is missing... Exiting..."
	exit 1
fi

if [ ! -f /usr/sbin/VBoxControl ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL55"
	exit 0
fi

$DIALOG400 $TITLE"$TITLETEXT" $OKEXIT $TEXT"$LOCAL56"

if [ "$?" != "0" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL37"
	exit 1
else
	$SPARKYXTERM "apt-get remove virtualbox-guest-utils -y"
	$SPARKYXTERM "apt-get autoremove -y"
fi

# check has the package been removed
if [ -f /usr/sbin/VBoxControl ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL57"
	exit 0
else
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL8"
	exit 0
fi

exit 0
