#!/bin/bash

# install-kernel-pae script lets you install i686-pae Linux kernel
# on 32 bit Sparky/Debian installations
#
# Copyright 2015, 2016, 2017 Pawe≈Ç "pavroo" Pijanowski <pavroo@onet.eu>
# Licensed under the GPLv2 license see /usr/share/common-licenses/GPL-2
# Created 2015/04/14 
# Last update 2017/01/10

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
    /usr/bin/remsu $0 &
fi

DIALOG="yad --window-icon=preferences-other --width=450 --height=200 --center"
TITLE="--always-print-result --dialog-sep --image=preferences-other --title="
TEXT="--text="
OKEXIT=" --button=Ok:0 --button=$LOCAL24:1"
MSGBOX="--button=Ok:0"
TITLETEXT="$LOCAL13"
ARCH=`uname -r | grep "amd64" | awk '{print $1}'`
TESTPAE=`dpkg-query -l | grep linux-image | grep -v "pae"`
TESTHEADERSPAE=`dpkg-query -l | grep linux-headers | grep -v "pae"`
if [ -f /opt/sparky/sparky-xterm ]; then
. /opt/sparky/sparky-xterm
else
SPARKYXTERM="x-terminal-emulator"
fi

if [ ! "$ARCH" = "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL14"
exit 0
fi

if [ "$TESTPAE" = "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL15"
exit 0
fi

# check connection
PINGTEST=$(ping -c 1 debian.org | grep [0-9])

if [ "$PINGTEST" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL16"
	exit 1
fi

$DIALOG $TITLE"$TITLETEXT" $OKEXIT $TEXT"$LOCAL17"

if [ "$?" != "0" ]; then

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL18"

else
$SPARKYXTERM -e "apt-get install linux-image-686-pae linux-headers-686-pae -y"

fi

# check have everything been installed
if [ "$TESTPAE" = "" ] && [ "$TESTHEADERSPAE" = "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL19"
exit 0

else
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL20"
exit 0
fi
