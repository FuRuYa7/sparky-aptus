# Licensed under the GPLv2 license see /usr/share/common-licenses/GPL-2
# Created 2018/04/18
# Last update 2018/04/18

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"
if [ "$testroot" != "root" ]; then
	/usr/bin/remsu $0 &
fi

DIALOG="yad --window-icon=preferences-system --width=450 --height=200 --center"
TITLE="--always-print-result --dialog-sep --image=preferences-system --title="
TEXT="--text="
MSGBOX="--button=Ok:0"
BUTTONREMOVE="--button=$LOCAL3:3"
BUTTONREINSTALL="--button=$LOCAL85:4"
BUTTONINSTALL="--button=$LOCAL2:0"
BUTTONEXIT="--button=$LOCAL24:1"
TITLETEXT="Vulkan Utils $LOCAL86"
INSTALL="apt-get install"
REINSTALL="apt-get install --reinstall"
UNINSTALL="apt-get purge"
if [ -f /usr/bin/sparky-xterm ];then
	SPARKYXTERM="/usr/bin/sparky-xterm"
else
	echo "sparky-xterm is missing... Exiting..."
	exit 1
fi

# check connection
PINGTEST=$(ping -c 1 debian.org | grep [0-9])

if [ "$PINGTEST" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL16"
	exit 1
fi

# vulkan-utils
if [ -f /usr/share/doc/vulkan-utils/copyright ]; then
	$DIALOG $TEXT"\n$LOCAL89\n$LOCAL90" $TITLE"$TITLETEXT" $BUTTONREMOVE $BUTTONREINSTALL $BUTTONEXIT
	ret=$?
	if [[ $ret -eq 3 ]]; then
		$SPARKYXTERM "$UNINSTALL vulkan-utils"
	elif [[ $ret -eq 4 ]]; then
		$SPARKYXTERM "$REINSTALL vulkan-utils"
	else
		exit 1
	fi
elif [ ! -f /usr/share/doc/vulkan-utils/copyright ]; then
	$DIALOG $TEXT"\n$LOCAL91" $TITLE"$TITLETEXT" $BUTTONINSTALL $BUTTONEXIT
	if [ "$?" = "0" ]; then
		$SPARKYXTERM "$INSTALL vulkan-utils"
		if [ ! -f /usr/share/doc/vulkan-utils/copyright ]; then
			$DIALOG $TEXT"\n$LOCAL20" $TITLE"$TITLETEXT" $MSGBOX
			exit 1
		else
			$DIALOG $TEXT"\n$LOCAL87\n\n$LOCAL88\n vulkaninfo" $TITLE"$TITLETEXT" $MSGBOX
			exit 1
		fi			
	else
		exit 1
	fi
fi

exit 0
