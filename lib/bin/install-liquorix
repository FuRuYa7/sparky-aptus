#!/bin/bash

# install-liquorix script lets you install the 3th party Liquorix Linux kernel
#
# Copyright 2015-2018 Pawe≈Ç "pavroo" Pijanowski <pavroo@onet.eu>
# Licensed under the GPLv2 license see /usr/share/common-licenses/GPL-2
# Created 2015/05/18
# Last update 2018/03/16

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
	/usr/bin/remsu $0 &
fi

DIALOG="yad --window-icon=prefernces-other --width=450 --height=200 --center"
TITLE="--always-print-result --dialog-sep --image=preferences-other --title="
TEXT="--text="
MENU="--list --column=$LOCAL21 --column=$LOCAL22"
OKEXIT=" --button=Ok:0 --button=$LOCAL24:1"
MSGBOX="--button=Ok:0"
TITLETEXT="$LOCAL23"
ARCH=`uname -r | grep "amd64" | awk '{print $1}'`
TESTLIQ=`dpkg-query -l | grep linux-image-liquorix*`
if [ -f /usr/bin/sparky-terminal ]; then
	SPARKYXTERM="sparky-terminal"
else
	SPARKYXTERM="x-terminal-emulator"
fi

# check is the Liquorix kernel installed already
if [ "$TESTLIQ" != "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL25"
	exit 1
fi

# check connection
PINGTEST=$(ping -c 1 debian.org | grep [0-9])

if [ "$PINGTEST" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL16"
	exit 1
fi

# check arm arch
ARCHARM="`uname -m | grep arm`"
if [ "$ARCHARM" != "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL66"
	exit 1
fi

mainmenu () {
CHOICES=`$DIALOG $TITLE"$TITLETEXT" $OKEXIT $MENU $TEXT"$LOCAL26" \
NON_PAE "$LOCAL27" \
PAE "$LOCAL28" \
64 "$LOCAL29" \
Exit "$LOCAL30"`

if [ "$?" = "0" ]; then
	CHOICE=`echo $CHOICES | cut -d "|" -f 1`
else
	exit 0
fi

if [ "$CHOICE" = "NON_PAE" ]; then
nonpaemenu
elif [ "$CHOICE" = "PAE" ]; then
paemenu
elif [ "$CHOICE" = "64" ]; then
64menu
elif [ "$CHOICE" = "Exit" ]; then
exit 0
else
exit 0
fi
}

nonpaemenu () {
if [ "$ARCH" != "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL31"
mainmenu
fi

# check the Liquorix list
if [ ! -f /etc/apt/sources.list.d/liquorix.list ]; then
cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

# install Liquorix keyring
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

else

rm -f /etc/apt/sources.list.d/liquorix.list

cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

fi

# install i686 NON-PAE Liquorix kernel
$SPARKYXTERM -e "apt-get install linux-image-liquorix-686 linux-headers-liquorix-686"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL32"

exit 0

}

paemenu () {
if [ "$ARCH" != "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL14"
mainmenu
fi

# check the Liquorix list
if [ ! -f /etc/apt/sources.list.d/liquorix.list ]; then
cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

# install Liquorix keyring
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

else

rm -f /etc/apt/sources.list.d/liquorix.list

cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

fi

# install i686 PAE Liquorix kernel
$SPARKYXTERM -e "apt-get install linux-image-liquorix-686-pae linux-headers-liquorix-686-pae"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL32"

exit 0

}

64menu () {
if [ "$ARCH" = "" ]; then
$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL33"
mainmenu
fi

# check the Liquorix list
if [ ! -f /etc/apt/sources.list.d/liquorix.list ]; then
cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

# install Liquorix keyring
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

else

rm -f /etc/apt/sources.list.d/liquorix.list

cat > /etc/apt/sources.list.d/liquorix.list <<FOO
# Liquorix kernel
deb http://liquorix.net/debian sid main
deb-src http://liquorix.net/debian sid main

FOO

$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install apt-transport-https -y --force-yes"
$SPARKYXTERM -e "apt-get update"
$SPARKYXTERM -e "apt-get install liquorix-keyring -y --force-yes"

fi

# install 64 bit Liquorix kernel
$SPARKYXTERM -e "apt-get install linux-image-liquorix-amd64 linux-headers-liquorix-amd64"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL32"

exit 0

}

mainmenu
