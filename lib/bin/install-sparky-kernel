#!/bin/bash

# install-sparky-kernel script lets you install the latest stable,
# home roasted Linux kernel
#
# Copyright 2016 PaweÅ‚ "pavroo" Pijanowski <pavroo@onet.eu>
# Licensed under the GPLv2 license see /usr/share/common-licenses/GPL-2
# Created 2016/04/06
# Last update 2017/01/10

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
    /usr/bin/remsu $0 &
fi

DIALOG="yad --window-icon=prefernces-other --width=450 --height=200 --center"
TITLE="--always-print-result --dialog-sep --image=preferences-other --title="
TEXT="--text="
MENU="--list --column=$LOCAL21 --column=$LOCAL22"
OKEXIT=" --button=Ok:0 --button=$LOCAL24:1"
MSGBOX="--button=Ok:0"
TITLETEXT="$LOCAL60"
ARCH=`uname -r | grep "amd64" | awk '{print $1}'`
TESTSPARKY=`dpkg-query -l | grep linux-image-sparky*`
if [ -f /opt/sparky/sparky-xterm ]; then
. /opt/sparky/sparky-xterm
else
SPARKYXTERM="x-terminal-emulator"
fi

# check is the Sparky kernel installed already
if [ "$TESTSPARKY" != "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL61"
	exit 0
fi

# check connection
PINGTEST=$(ping -c 1 sparkylinux.org | grep [0-9])

if [ "$PINGTEST" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"\n$LOCAL16"
	exit 1
fi

mainmenu () {
CHOICES=`$DIALOG $TITLE"$TITLETEXT" $OKEXIT $MENU $TEXT"$LOCAL26" \
NON_PAE "$LOCAL62" \
PAE "$LOCAL63" \
64 "$LOCAL64" \
Exit "$LOCAL30"`

if [ "$?" = "0" ]; then
CHOICE=`echo $CHOICES | cut -d "|" -f 1`
else
exit 0
fi

if [ "$CHOICE" = "NON_PAE" ]; then
nonpaemenu
elif [ "$CHOICE" = "PAE" ]; then
paemenu
elif [ "$CHOICE" = "64" ]; then
amd64menu
elif [ "$CHOICE" = "Exit" ]; then
exit 0
else
exit 0
fi
}

nonpaemenu () {
if [ "$ARCH" != "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL31"
	mainmenu
fi

# preper the sparky unstable list
if [ -f /etc/apt/sources.list.d/sparky-unstable.list ]; then
	rm -f /etc/apt/sources.list.d/sparky-unstable.list
fi

cat > /etc/apt/sources.list.d/sparky-unstable.list <<FOO
# sparky unstable repository
deb http://sparkylinux.org/repo/ unstable main
deb-src http://sparkylinux.org/repo/ unstable main
FOO

$SPARKYXTERM -e "apt-get update"

# install i686 NON-PAE Sparky kernel and headers
$SPARKYXTERM -e "apt-get install linux-image-sparky-686 linux-headers-sparky-686 -y"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL65"

exit 0

}

paemenu () {
if [ "$ARCH" != "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL14"
	mainmenu
fi

# preper the sparky unstable list
if [ -f /etc/apt/sources.list.d/sparky-unstable.list ]; then
	rm -f /etc/apt/sources.list.d/sparky-unstable.list
fi

cat > /etc/apt/sources.list.d/sparky-unstable.list <<FOO
# sparky unstable repository
deb http://sparkylinux.org/repo/ unstable main
deb-src http://sparkylinux.org/repo/ unstable main
FOO

$SPARKYXTERM -e "apt-get update"

# install i686 PAE Sparky kernel and headers
$SPARKYXTERM -e "apt-get install linux-image-sparky-686-pae linux-headers-sparky-686-pae -y"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL65"

exit 0

}

amd64menu () {
if [ "$ARCH" = "" ]; then
	$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL33"
	mainmenu
fi

# preper the sparky unstable list
if [ -f /etc/apt/sources.list.d/sparky-unstable.list ]; then
	rm -f /etc/apt/sources.list.d/sparky-unstable.list
fi

cat > /etc/apt/sources.list.d/sparky-unstable.list <<FOO
# sparky unstable repository
deb http://sparkylinux.org/repo/ unstable main
deb-src http://sparkylinux.org/repo/ unstable main
FOO

$SPARKYXTERM -e "apt-get update"

# install 64 bit Sparky kernel and headers
$SPARKYXTERM -e "apt-get install linux-image-sparky-amd64 linux-headers-sparky-amd64 -y"

$DIALOG $TITLE"$TITLETEXT" $MSGBOX $TEXT"$LOCAL65"

exit 0

}

mainmenu
