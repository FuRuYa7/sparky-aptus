# Last updated 2018/04/17

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"
if [ "$testroot" != "root" ]; then
	echo "Must be root... Exiting..."
	exit 1
fi

# General settings for Yad
YAD="yad"
WINDOWICON="--window-icon=system-software-install"
READDIR="--read-dir"
DIR="/usr/lib/sparky-aptus"
ITEM="--item-width=80"
TITLE="--always-print-result --dialog-sep --title="
TITLETEXT="APTus"
TEXT="--text="
PLUG="--plug=1234560"
HEIGHT="500"
WIDTH="820"
TABNUM="--tabnum"
IMAGEONTOP="--image-on-top"
ICONS="--icons"
SORT="--sort-by-name"
CENTER="--center"
TAB="--tab"
NOTEBOOK="--notebook"
NOBUTTONS="--no-buttons"
#BUTTONUPDATE="--button=$LOCAL1:0"
#BUTTONUPGRADE=" --button=$LOCAL76:3"
#BUTTONFULLUPGRADE=" --button=$LOCAL77:4"
#BUTTONEXIT="--button=$LOCAL24:1"
#BUTTONS="--buttons-layout=center"

# Key to bind the windows
KEY="--key"
YADKEY=1234560

### Accessories, Desktop, Game, Multimedia, Office, System, Web
# Tab 1 Accessories
$YAD $PLUG $TABNUM=1 $IMAGEONTOP $ICONS $READDIR=$DIR/accessories $ITEM $SORT $CENTER &
# Tab 2 Codecs
$YAD $PLUG $TABNUM=2 $IMAGEONTOP $ICONS $READDIR=$DIR/codecs $ITEM $SORT $CENTER &
# Tab 3 Desktop
if [ "$ARCHARM" != "" ]; then
$YAD $PLUG $TABNUM=3 $IMAGEONTOP $ICONS $READDIR=$DIR/desktop-arm $ITEM $SORT $CENTER &
else
$YAD $PLUG $TABNUM=3 $IMAGEONTOP $ICONS $READDIR=$DIR/desktop $ITEM $SORT $CENTER &
fi
# Tab 4 Game
$YAD $PLUG $TABNUM=4 $IMAGEONTOP $ICONS $READDIR=$DIR/game $ITEM $SORT $CENTER &
# Tab 5 Office
$YAD $PLUG $TABNUM=5 $IMAGEONTOP $ICONS $READDIR=$DIR/office $ITEM $SORT $CENTER &
# Tab 6 System
$YAD $PLUG $TABNUM=6 $IMAGEONTOP $ICONS $READDIR=$DIR/system $ITEM $SORT $CENTER &
# Tab 7 Web
$YAD $PLUG $TABNUM=7 $IMAGEONTOP $ICONS $READDIR=$DIR/web $ITEM $SORT $CENTER &

# Read yad window with tabs
$YAD $CENTER $NOTEBOOK $KEY=$YADKEY $TAB="$LOCAL83" $TAB="$LOCAL79" $TAB="$LOCAL59" $TAB="$LOCAL78" $TAB="$LOCAL80" $TAB="$LOCAL81" $TAB="$LOCAL82" $TITLE"$TITLETEXT" --height=$HEIGHT --width=$WIDTH $WINDOWICON $NOBUTTONS

# $TEXT"\n$LOCAL84" $BUTTONUPDATE $BUTTONUPGRADE $BUTTONFULLUPGRADE $BUTTONEXIT $BUTTONUPDATE $BUTTONEXIT $BUTTONS
#ret=$?

#if [[ $ret -eq 2 ]]; then
#	/usr/lib/sparky-aptus/bin/sparky-update
#	/usr/bin/sparky-aptus
#fi

#if [[ $ret -eq 3 ]]; then
#	/usr/lib/sparky-aptus/bin/sparky-upgrade
#	/usr/bin/sparky-aptus
#fi

#if [[ $ret -eq 4 ]]; then
#	/usr/lib/sparky-aptus/bin/sparky-upgrade-full
#	/usr/bin/sparky-aptus
#else
#	exit 0
#fi

#if [[ $ret -eq 5 ]]; then
#	exit 1
#fi

#if [ "$?" = "1" ]; then
	#/usr/lib/sparky-aptus/bin/update
	#/usr/bin/sparky-aptus
#else
#	exit 1
#fi

exit 0
