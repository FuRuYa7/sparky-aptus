#!/bin/bash

# Sparky APTus is a simply GUI frontend for APT-GET and DPKG
# Created by Pawe≈Ç "pavroo" Pijanowski 2013/08/31
# Copyright 2013, 2014, 2015, 2016, 2017 under the GNU GPL2 License
# Last updated 2017/04/30

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-aptus"
if [ "`cat /etc/default/locale | grep de_DE`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep el_GR`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep es_AR`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr_FR`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep it_IT`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl_PL`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru_RU`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

testroot="`whoami`"

if [ "$testroot" != "root" ]; then
    echo "Must be root...Exiting"
    exit 1
fi

# General settings for Yad
YAD="yad"
WINDOWICON="--window-icon=system-software-install"
READDIR="--read-dir"
DIR="/usr/lib/sparky-aptus"
ITEM="--item-width=100"
TITLE="--always-print-result --dialog-sep --title="
TITLETEXT="APTus"
PLUG="--plug=1234502"
HEIGHT="400"
WIDTH="580"
TABNUM="--tabnum"
IMAGEONTOP="--image-on-top"
ICONS="--icons"
SORT="--sort-by-name"
CENTER="--center"
TAB="--tab"
NOTEBOOK="--notebook"
NOBUTTONS="--no-buttons"

# Key to bind the windows
KEY="--key"
YADKEY=1234502

# Tab 1 Update
$YAD $PLUG $TABNUM=1 $IMAGEONTOP $ICONS $READDIR=$DIR/update $ITEM $SORT $CENTER &
# Tab 2 Install
$YAD $PLUG $TABNUM=2 $IMAGEONTOP $ICONS $READDIR=$DIR/inst $ITEM $SORT $CENTER &
# Tab 3 Desktop Installer
#$YAD $PLUG $TABNUM=3 $IMAGEONTOP $ICONS $READDIR=/usr/lib/sparkydesktop $ITEM $SORT $CENTER &
# Tab 4 Remove
$YAD $PLUG $TABNUM=3 $IMAGEONTOP $ICONS $READDIR=$DIR/remove $ITEM $SORT $CENTER &
# Tab 5 Fix
$YAD $PLUG $TABNUM=4 $IMAGEONTOP $ICONS $READDIR=$DIR/fix $ITEM $SORT $CENTER &
# Tab 6 Clean
$YAD $PLUG $TABNUM=5 $IMAGEONTOP $ICONS $READDIR=$DIR/clean $ITEM $SORT $CENTER &
# Tab 7 Repository
$YAD $PLUG $TABNUM=6 $IMAGEONTOP $ICONS $READDIR=$DIR/repo $ITEM $SORT $CENTER &

# Read yad window with tabs
$YAD $CENTER $NOTEBOOK $KEY=$YADKEY $TAB="$LOCAL1" $TAB="$LOCAL2" $TAB="$LOCAL3" $TAB="$LOCAL4" $TAB="$LOCAL5" $TAB="$LOCAL6" $TITLE"$TITLETEXT" --height=$HEIGHT --width=$WIDTH $NOBUTTONS $WINDOWICON

exit 0
